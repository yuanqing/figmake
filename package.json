{
  "name": "figmake",
  "version": "0.0.2",
  "description": "A tiny CLI for making Figma plugins in HTML, CSS, and vanilla JavaScript",
  "keywords": [
    "figma",
    "figmake",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Lim Yuan Qing",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/figmake.git"
  },
  "files": [
    "lib"
  ],
  "bin": {
    "figmake": "lib/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf lib",
    "fix": "prettier-standard 'src/**/*.ts'",
    "lint": "standardx 'src/**/*.ts'",
    "prepublishOnly": "yarn run clean && yarn run build",
    "reset": "rimraf node_modules yarn.lock && yarn install",
    "watch": "tsc --preserveWatchOutput --sourceMap --watch"
  },
  "dependencies": {
    "chokidar": "^3.4.0",
    "html-minifier": "^4.0.0",
    "postcss": "^7.0.29",
    "postcss-url": "^8.0.0",
    "posthtml": "^0.13.0",
    "posthtml-inline-assets": "^3.1.0",
    "sade": "^1.7.3",
    "sass": "^1.26.5",
    "tempy": "^0.5.0",
    "terser-webpack-plugin": "^3.0.1",
    "webpack": "^4.43.0"
  },
  "devDependencies": {
    "@types/html-minifier": "^3.5.3",
    "@types/postcss-url": "^8.0.1",
    "@types/sade": "^1.6.0",
    "@types/sass": "^1.16.0",
    "@types/terser-webpack-plugin": "^2.2.0",
    "@types/webpack": "^4.41.12",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier-standard": "^16.3.0",
    "rimraf": "^3.0.2",
    "standardx": "^5.0.0",
    "typescript": "^3.8.3"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "standardx",
      "prettier-standard"
    ]
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  }
}
